extend templates/layout.pug

block content
    .container
        h3= heading
        .row
            -
                var actionURL = "/admin/jar/" + jar.shortCode + "/jar-slot";
            form.col.s12(action=actionURL method="POST")
                .row
                    .col.s12
                        .row
                            each slot in slots
                                .col.s12.l6
                                    div
                                        .row
                                            .col.s12.slot-space
                                                input(type="radio" name="slot" id="selection-"+slot.id value=slot.id)
                                                label.slot-space(for="selection-"+slot.id)
                                                    .row
                                                        .col.s4.slot-space
                                                            img.slot-img(src="/admin/image/"+slot.image.id, alt=slot.name) 
                                                        .col.s8.center.slot-space.green
                                                            .call-to-action
                                                                p.black-text.green.flow-text= slot.callToAction
                    //- TODO: Have a submit/next button
                .row
                    .col.s12.center
                        <button class="btn waves-effect waves-light" type="submit" name="action">Select
                            <i class="material-icons right">send</i>
                        </button>
        