extends templates/layout.pug

block content
    <div id="content-root">
        <div class="container">
            <h1 class="flow-text">Please Signup to join us.</h1>
            if errorMessage
                p.flow-text.red-text= errorMessage
            form(action="/admin/signup" method="POST")
                <div  class="row">
                    <div class="col s12 m6">
                        <label for="email">Email:</label>
                        <input class="validate" id="email" type="email" name="username"/>
                    </div>
                    <div class="col s12 m6">
                        <label for="phoneNumber">Phone Number:</label>
                        <input id="phoneNumber" type="text" name="phoneNumber"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m6">
                        <label for="firstName">First Name:</label>
                        <input id="firstName" type="text" name="firstName"/>
                    </div>
                    <div class="col s12 m6">
                        <label for="lastName">Last Name:</label>
                        <input id="lastName" type="text" name="lastName"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <label for="password">Password:</label>
                        <input id="password" type="password" name="password"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <label for="confirmPassword">Confirm Password:</label>
                        <input id="confirmPassword" type="password" name="confirmPassword"/>
                    </div>
                </div>  
                <div class="row">
                    <div class="col s12">
                        <button  class="btn waves-effect waves-light" v-on:click="attemptSignup">Sign up</button>
                    </div>
                </div>  
                
        </div>
    </div>