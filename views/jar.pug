extend templates/layout.pug

block content
    .container
        h1 Money Jar 
            a.btn(href="/jar/" + jar.shortCode + "/edit") Edit Jar

        //- TODO: Show the display name and description...
        .row
            .col.s12.l4.m4
                p 
                    strong Display Name
                p= jar.displayName
            .col.s12.l8.m8
                p 
                    strong Description
                p= jar.description
        .row
            .col.s12
                h2 Jar Slots
            .col.s12
                table.bordered
                    thead
                        tr
                            th Name
                            th Call To Action
                            th Link
                            th 
                                a.btn(href="/jar-slot/") Add Jar Slot
                    tbody
                        each jarSlot in jar.jarSlots
                            tr
                                td
                                    a(href="/jar/"+jarSlot.shortCode)= jarSlot.slot.name
                                td= jarSlot.slot.callToAction
                                td= jarSlot.slot.scheme +  jarSlot.uri
                                td
                                    a(href="/slot/") Edit

        br