extend templates/layout.pug

block content
    .container
        h1 Create a new Money Jar
        .row
            -
                var actionURL = jar.shortCode == null ? "/admin/open/jar" : "/admin/edit/jar/" + jar.shortCode;
            form.col.s12(action=actionURL method="POST")
                .row
                    .input-field.col.s12
                        <input placeholder="Short code" id="short_code" type="text" class="validate" value=#{jar.shortCode}>
                        <label for="short_code">Short Code which will be on links</label>
                    .input-field.col.s12
                        <input placeholder="Display Name" id="display_name" type="text" class="validate" value=#{jar.displayName}>
                        <label for="display_name">Display name will be heading of jar</label>
                    .input-field.col.s12
                        <input placeholder="Description" id="description" type="text" class="validate" value=#{jar.description}>
                        <label for="description">Short description for why people should fill your money jar</label>
                    //- TODO: Display Image if it is available...
                    .file-field.input-field.col.s12
                        <div class="btn">
                            <span>Image</span>
                            <input type="file">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate"  placeholder="Image to be used as the face of your money jar" type="text">
                        </div>

                    //- TODO: Have a submit/next button
                    .col.s12.center
                        <button class="btn waves-effect waves-light" type="submit" name="action">Next
                            <i class="material-icons right">send</i>
                        </button>
        